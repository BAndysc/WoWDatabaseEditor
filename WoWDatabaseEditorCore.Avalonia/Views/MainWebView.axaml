             xmlns:controls1="clr-namespace:WoWDatabaseEditorCore.Avalonia.Controls"
             x:DataType="viewModels:MainWindowViewModel"
             Background="{DynamicResource WindowContentBackground}"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             utils:MenuBind.MenuItemsGestures="{CompiledBinding MenuItemProviders}"
             x:Class="WoWDatabaseEditorCore.Avalonia.Views.MainWebView">
