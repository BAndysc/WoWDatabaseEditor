<Styles xmlns="https://github.com/avaloniaui" xmlns:asyncAvaloniaTest="clr-namespace:WoWDatabaseEditorCore.Avalonia"
        xmlns:controls="clr-namespace:WoWDatabaseEditorCore.Avalonia.Controls">
    <Style Selector="controls|StatusBar">
        <Setter Property="Height" Value="26" />
        <Setter Property="BorderBrush" Value="{DynamicResource TitleBarSeparatorBrush}" />
        <Setter Property="BorderThickness" Value="0,0.5,0,0"/>
        <Setter Property="Background" Value="{DynamicResource TitleBarBackground}"/> 
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="0,0,2,2">
                        <ContentPresenter Content="{TemplateBinding Content}" Margin="78,7.5,7.5,7.5"/>
                    </Border>
                </Panel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>