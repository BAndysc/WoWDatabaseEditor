<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="MenuItem">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="6 0" />
    </Style>
    
    <Style Selector="Menu > MenuItem">
        <Setter Property="Padding" Value="6 0" />
    </Style>

    <Style Selector="MenuItem /template/ ItemsPresenter#PART_ItemsPresenter">
        <Setter Property="Margin" Value="2" />
    </Style>

    <Style Selector="MenuItem /template/ Border#root">
        <Setter Property="CornerRadius" Value="3" />
    </Style>
    
    <Style Selector="MenuItem:selected /template/ Border#root">
        <Setter Property="Background" Value="{DynamicResource MenuItem.Background.PointerOver}" />
    </Style>
    
    <Style Selector="MenuItem">
        <Setter Property="Foreground" Value="{DynamicResource MenuItem.Foreground}" />
    </Style>
    
    <Style Selector="MenuItem:selected">
        <Setter Property="Foreground" Value="{DynamicResource MenuItem.Foreground.PointerOver}" />
    </Style>
</Styles>