    </UserControl.Resources>
    
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="True">
            <controls:FixedTextBox DockPanel.Dock="Right"
                                   Width="220"
                                   AcceptsReturn="False"
                                   Watermark="Search"
                                   Text="{CompiledBinding SearchBox}"
                                   KeyDown="InputElement_OnKeyDown"
                                   HorizontalAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   utils:FocusUtils.FocusFirst="True" />
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{CompiledBinding SelectedItem.Help, FallbackValue='', TargetNullValue=''}" TextWrapping="WrapWithOverflow" />
                <TextBlock Text="{CompiledBinding SelectedItem.EnumName, FallbackValue='', TargetNullValue=''}" TextWrapping="WrapWithOverflow" Opacity="0.5" />
            </StackPanel>
        </DockPanel>
        
        <ListBox ItemsSource="{CompiledBinding Items}"
                 Grid.Row="1" Grid.ColumnSpan="2"  
                 SelectedItem="{CompiledBinding SelectedItem}"
                 Name="ListBox"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                
                 Margin="0,6,0,6">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <editor:FastGroupingWrapPanel ItemWidth="160" ItemHeight="24">
                    </editor:FastGroupingWrapPanel>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.Styles>
                <Style Selector="ListBoxItem" x:DataType="viewModels:EventOrActionItem">
                    <Setter Property="(editor:FastGroupingWrapPanel.Group)" Value="{CompiledBinding Group}" />	
                    <Setter Property="(editor:FastGroupingWrapPanel.Active)" Value="{CompiledBinding ShowItem}"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="ClipToBounds" Value="False" />
                    <Setter Property="Padding" Value="7,5,2,7"></Setter>
                    <Setter Property="ContextMenu">
                        <FixedContextMenu>
                            <MenuItem Header="Toggle favourite" CommandParameter="{CompiledBinding}" Command="{Binding #Root.DataContext.ToggleFavouriteCommand}" />
                        </FixedContextMenu>
                    </Setter>
                </Style>
                <Style Selector="ListBoxItem Path">
                    <Setter Property="ClipToBounds" Value="False" />
                    <Setter Property="MinWidth" Value="20" />
                    <Setter Property="MinHeight" Value="20" />
                </Style>
            </ListBox.Styles>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel LastChildFill="True">
                        <Image Margin="0,0,4,0" Width="16" Height="16" Stretch="Fill" Source="{StaticResource cogIcon}">
                            <Interaction.Behaviors>
                                <DataTriggerBehavior Binding="{CompiledBinding IsTimed}" Value="True">
                                    <ChangePropertyAction PropertyName="Source" Value="{StaticResource timedIcon}" />
                                </DataTriggerBehavior>
                                <DataTriggerBehavior Binding="{CompiledBinding IsTimed}" Value="False">
                                    <ChangePropertyAction PropertyName="Source" Value="{StaticResource cogIcon}" />
                                </DataTriggerBehavior>
                            </Interaction.Behaviors>
                        </Image>
                        <Path Data="{StaticResource star_regular}"
                              DockPanel.Dock="Right"
                              IsVisible="{CompiledBinding IsFavourite}"
                              Fill="#FFB000"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                        </Path>
                        <TextBlock Text="{CompiledBinding Name}" VerticalAlignment="Center">
                            <Interaction.Behaviors>
                                <DataTriggerBehavior Binding="{CompiledBinding Deprecated}" Value="True">
                                    <ChangePropertyAction PropertyName="Foreground" Value="Gray" />
                                </DataTriggerBehavior>
                                <DataTriggerBehavior Binding="{CompiledBinding Deprecated}" Value="False">
                                    <ChangePropertyAction PropertyName="Foreground" Value="{Binding #Root.Foreground}" />
                                </DataTriggerBehavior>
                            </Interaction.Behaviors>
                        </TextBlock>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <Interaction.Behaviors>
                <EventTriggerBehavior EventName="DoubleTapped">
                    <InvokeCommandAction Command="{Binding #Root.DataContext.Accept}" />
                </EventTriggerBehavior>
            </Interaction.Behaviors>
        </ListBox>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <Button Content="Cancel" Command="{CompiledBinding Cancel}"  />
            <TextBlock Grid.Column="1" FontSize="9" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.3">Right click on an item to mark as favourite.</TextBlock>
            <Button Classes="primary" Command="{CompiledBinding Accept}" Grid.Column="2" Content="Next" />
        </Grid>
    </Grid>
</controls:DialogViewBase>