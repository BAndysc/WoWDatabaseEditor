<controls:DialogViewBase x:Class="WDE.EventAiEditor.Avalonia.Editor.Views.EventAiSelectView"
                xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mvvm="http://prismlibrary.com/"
                xmlns:controls="clr-namespace:WDE.Common.Avalonia.Controls;assembly=WDE.Common.Avalonia"
                xmlns:utils="clr-namespace:WDE.Common.Avalonia.Utils;assembly=WDE.Common.Avalonia"
                xmlns:editor="clr-namespace:WDE.EventAiEditor.Avalonia.Editor"
                Name="Root"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:viewModels="clr-namespace:WDE.EventAiEditor.Editor.ViewModels;assembly=WDE.EventAiEditor"
                x:DataType="viewModels:EventAiSelectViewModel"
                mvvm:ViewModelLocator.AutoWireViewModel="False">
